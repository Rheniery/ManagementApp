@model Management.Business.Business.Tag

<h4>Create a Tag</h4>
<hr />
@if (ViewData["ValidTag"] != null)
{
    @if (ViewData["ValidTag"].ToString() == "Error")
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Failed!</strong> It was not possible to save the register.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewData["ValidTag"].ToString() == "Success")
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!!</strong> Tag created.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-controller="Tag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" style="text-align:center;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


